<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

    <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
	
    <targets>

        <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
		<targets>
            <target name="logfile" encoding="utf-8" xsi:type="File" fileName="SanityEditor.log" />
            <target name="logconsole"		encoding="utf-8"					xsi:type="ColoredConsole" />
            <target name="logerrorconsole"	encoding="utf-8" errorStream="true"	xsi:type="ColoredConsole" />
        </targets>
    </targets>

    <rules>
        <rules>
            <logger name="*" minlevel="Verbose" maxlevel="Warn" writeTo="logconsole" />
            <logger name="*" minlevel="Debug" writeTo="logfile" />
            <logger name="*" minLevel="Error" writeTo="logerrorconsole" />
        </rules>
    </rules>
</nlog>

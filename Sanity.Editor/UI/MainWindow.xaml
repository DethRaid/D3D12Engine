<Window x:Class="Sanity.Editor.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sanity.Editor.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Menu x:Name="MainMenuBar" HorizontalAlignment="Left" VerticalAlignment="Top">
            <MenuItem Header="Project">
                <MenuItem Header="New Project" Click="NewProject_Click"></MenuItem>
                <MenuItem Header="Open Project"></MenuItem>
                <MenuItem Header="Edit Project"></MenuItem>
            </MenuItem>
            <MenuItem Header="World"></MenuItem>
            <MenuItem Header="Environment"></MenuItem>
            <MenuItem Header="AI"></MenuItem>
        </Menu>
        <Frame Name="PageFrame" Content="Frame" Margin="0,23,0,0" Source="/UI/EnvironmentEditor.xaml"/>

    </Grid>
</Window>

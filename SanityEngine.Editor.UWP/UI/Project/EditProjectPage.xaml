<Page
    x:Class="Sanity.Editor.UI.Project.EditProjectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sanity.Editor.UI.Project"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <x:Double x:Key="Text.Headering.PageTitle">48</x:Double>
    </Page.Resources>

    <Grid>
        <TextBlock HorizontalAlignment="Left" Text="New Project" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="{StaticResource Text.Headering.PageTitle}" Margin="10,10,0,0"/>
        <TextBox x:Name="ProjectTitleTextBox" HorizontalAlignment="Left" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Margin="121,111,0,0" Width="512"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,118,0,0" Text="Project Name:" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="CreateProjectButton" Content="Create Project" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="CreateProject_Click"/>
        <Button x:Name="ChooseProjectDirectoryButton" Content="Choose Project Directory" Margin="0,0,1385,804" VerticalAlignment="Bottom" HorizontalAlignment="Right" Click="ChooseDirectoryButton_OnClick"/>

    </Grid>
</Page>
